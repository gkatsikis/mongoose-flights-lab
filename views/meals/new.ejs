<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/meals.css" />
<%- include('../partials/nav') %>

<body>
  <main>
    <h1><%= title %></h1>
    <p>
      Please first ensure that the Performer is not in the dropdown 
      <select>
        <% meals.forEach(meal => { %>
          <option><%= meal.name %></option>
        <% }) %>
      </select>
    </p>
    <form id="add-meal-form" action="/meals" method="post">
      <label for="meal-input">Meal:</label>
      <input type="text" name="name" id="name-input">
      <button type="submit">Add Meal</button>
    </form>

  <%- include("../partials/footer") %>